<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>gov.samhsa.mhc</groupId>
    <artifactId>dss</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>dss</name>
    <description>Document Segmentation Service Api</description>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>1.3.2.RELEASE</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <java.version>1.8</java.version>
        <!-- MHC Common Libraries' version -->
        <mhc.common-libraries.version>1.0.0</mhc.common-libraries.version>
        <!-- BRMS Libraries' version -->
        <drools.version>5.4.0.Final</drools.version>
        <!-- Third-party library versions -->
        <saxon.version>9.7.0-2</saxon.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
        <!-- MHC Common Libraries -->
        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>logger-wrapper</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>marshaller</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>common-unit</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>file-reader</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>xml-validation</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>param</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>common-util</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>

        <dependency>
            <groupId>gov.samhsa.mhc</groupId>
            <artifactId>document-transformer</artifactId>
            <version>${mhc.common-libraries.version}</version>
        </dependency>
        <!--TODO-->
        <!-- BRMS dependencies -->
        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>knowledge-api</artifactId>
            <version>${drools.version}</version>
        </dependency>

        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-core</artifactId>
            <version>${drools.version}</version>
        </dependency>

        <dependency>
            <groupId>org.drools</groupId>
            <artifactId>drools-compiler</artifactId>
            <version>${drools.version}</version>
        </dependency>
        <!-- Third-party dependencies -->
        <dependency>
            <groupId>net.sf.saxon</groupId>
            <artifactId>Saxon-HE</artifactId>
            <version>${saxon.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
